# basic shortcuts and modifications
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias hgrep='history | grep'
alias la='ls -A'
alias ll='ls -lh'
alias lla='ls -lhA'
alias ls='ls --color=auto'

# program shortcuts
alias py3='python3'
alias ipy3='ipython3'

# apt
alias sai='sudo apt install'
alias sainr='sudo apt install --no-install-recommends'
alias sar='sudo apt remove'
alias sau='sudo apt upgrade'
alias sauu='sudo apt update && sudo apt upgrade'

# Linux admin (pipe from pgrep)
alias show-shared-libs='xargs -I {} cat /proc/{}/maps'

# show all installed packages
alias list-installed='apt list --installed'

# show recent installations via APT
alias recently-installed=grep " install " /var/log/dpkg.log

# convert any ODF file to PDF
alias odf2pdf='libreoffice --headless --convert-to pdf'
